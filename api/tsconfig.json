{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@engine/*": ["../shared/engine/*"],
      "*": [
        "node_modules/*"
      ]
    },
    "lib": ["es2015", "es2017", "dom"]
  },
  "references": [
    { "path": "../shared/tsconfig.build-api.json" }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/*"
  ]
}
